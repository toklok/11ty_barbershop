<html lang="{{ locale }}" dir="{{ dir }}">
<head>
  <title>{{ title }}</title>
  <meta name="robots" content="index, follow" />
  <meta name="viewport" content="width=device-width">
  <link rel="canonical" href="{{ siteData.canonical }}" />
  <link rel="icon" type="image/png" sizes="96x96" href="/img/barber-pole.png">
  <meta name="description" content="{{ siteData.meta_description }}">

  <meta property="og:title" content="Style Barber Shop">
  <meta property="og:description" content="Barber shop near me 697 Wood Ave, Woonsocket, Rhode Island 02895. | Style Barber shop">
  <meta property="og:image" content="https://stylebarbershop.info/img/34b95101-470.webp">
  <meta property="og:url" content="https://stylebarbershop.info/">

  <script type="application/ld+json">
